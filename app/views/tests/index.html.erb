<h1>Public Tests</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Creator</th>
      <th>Title</th>
      <th>Length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.user.name %></td>
        <td><%= test.title %></td>
        <td><%= pluralize(test.length, 'minute') %></td>
        <td><%=	link_to 'Take the test',new_test_submission_path(test) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
