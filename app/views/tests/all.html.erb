
<h1>Listing Tests</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Length</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% current_user.tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= pluralize(test.length, 'minute') %></td>
        <td><%= link_to 'Show', test %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_test_path %>
